{
  "manifest_version": 3,
  "default_locale": "en",
  "name": "Schedule Ninja",
  "version": "0.1.0",
  "description": "Don't miss a beat. We got your back.",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "identity"
  ],
  "host_permissions": [
    "https://www.googleapis.com/*"
  ],
  "oauth2": {
    "client_id": "245895678957-gardu1jqvk1fk1nresegnvarkitnp100.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/calendar.events"
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [{
    "resources": ["css/*", "assets/*"],
    "matches": ["<all_urls>"]
  }]
}
